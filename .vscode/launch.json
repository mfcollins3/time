    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug MCP Server (ngrok)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/time",
            "cwd": "${workspaceFolder}",
            "args": [
                "mcp",
                "ngrok"
            ]
        },
        {
            "name": "Debug Time (TUI)",
            "type": "go",
            "debugAdapter": "dlv-dap",
            "request": "attach",
            "mode": "remote",
            "remotePath": "${workspaceFolder}",
            "port": 2345,
            "host": "127.0.0.1",
            "preLaunchTask": "Run headless dlv"
        },
        {
            "name": "Attach to Time",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "processId": 0
        }
    ]
}